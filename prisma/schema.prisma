datasource db {
  provider = "mysql"
  url      = env("DATABASE_UPLOAD_SCHEMA_URL")
  
  // 다른 객체에 연결될 때 그 객체가 존재하길 바란다는 뜻
  referentialIntegrity = "prisma" 
}

generator client {
  provider = "prisma-client-js"

  // 다른 객체에 연결될 때 그 객체가 존재하길 바란다는 뜻
  previewFeatures = ["referentialIntegrity"] 
}

model User {
  id          Int       @id @default(autoincrement())
  email       String    @unique
  password    String?   // 소셜 로그인은 비밀번호를 받지않는다.
  name        String?   // 소셜 로그인은 이름을 받지않는다.
  nickname    String?
  phoneNumber String?      
  address     String?   // 소셜 로그인은 주소를 받지않는다.
  role        String    @default("user")
  age         Int?
  createAt    DateTime? @default(now())
  updateAt    DateTime? @updatedAt

}

model Profile {
  id          Int       @id @default(autoincrement())
  bio         String?

  userId      Int       @unique
}

model Post {
  id          Int       @id @default(autoincrement())
  title       String
  content     String    @db.LongText

  userId      Int       
}


model Bookmark {
  id                Int       @id @default(autoincrement())
  bookmarkName      String // 부산여행

  placeName         String 
  placeUrl          String
  categoryName      String
  addressName       String
  roadAddressName   String
  bookMarkId        String    @unique
  phone             String
  categoryGroupCode String
  categoryGroupName String
  x                 String
  y                 String

  userId            Int     
}